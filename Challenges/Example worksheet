import os
from time import sleep


def clear_screen():

    # It is for MacOS and Linux(here, os.name is 'posix')
    if os.name == 'posix':
        _ = os.system('clear')
    else:
        # It is for Windows platfrom
        _ = os.system('cls')


# wait for 2 seconds to clear screen
sleep(2)

# Calling the clear_screen() function
clear_screen()

principle = 103208.56
interest_rates = [.103, .067, .099, .10]
total_interest = 0.0
for rate in interest_rates:
    interest = rate * principle
    total_interest = total_interest + interest
    print("Your interest will be: ", interest)
print("The total interest is: ", total_interest)


